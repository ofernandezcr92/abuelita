{
  "manifest_version": 2,

  "name": "Help Grandma!",
  "version": "1.0",
  "description": "Manipulate the DOM when the page is done loading",

  "background": {
    // "page" : "grandma.html",
    "scripts": ["vendor/jquery/jquery.min.js", "js/grandma.js"],
    "persistent": false
  },

  // "browser_action": {
  //   "name": "Help granda!",
  //   "default_icon": "icon.png",
  //   "default_popup" : "grandma.html"
  // },

  "content_scripts": [ {
    "css" : ["css/grandma.css"],
    "js": [ "vendor/jquery/jquery.min.js", "js/content.js", "js/page.js"],
    "matches": [ "http://*/*", "https://*/*"]
    // ,"run_at": "document_end"
  }],

  "permissions": [
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/",
    "webNavigation",
    "storage"
  ],

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

  "web_accessible_resources" : [
    "vendor/*",
    "frame.html"
  ]
}