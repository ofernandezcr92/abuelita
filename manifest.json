{
  "manifest_version": 2,

  "name": "Help Grandma!",
  "version": "1.0",
  "description": "Manipulate the DOM when the page is done loading",
  // "background": "grandma.html",
  "browser_action": {
    "name": "Help granda!",
    "default_icon": "icon.png",
    "default_popup" : "grandma.html"
  },
  "content_scripts": [ {
    "js": [ "js/jquery.min.js" ],
    "matches": [ "http://*/*", "https://*/*"]
  }],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}